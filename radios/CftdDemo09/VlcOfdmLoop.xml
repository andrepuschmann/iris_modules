<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="Radio1">

    <engine name="pnengine1" class="pnengine">
    
        <component name="udprx1" class="udpsocketrx">
            <parameter name="port" value="1234"/>
            <parameter name="buffersize" value="1316"/>
            <parameter name="outputtype" value="uint8_t"/>
            <port name="output1" class="output"/>
        </component>
      
        <component name="fullcyclobwmodulator1" class="fullcyclobwmodulator">
        	<parameter name="debug" value="false"/>	
	            <parameter name="randomize" value="false"/>
	            <parameter name="numunits" value="8"/>
	            <port name="input1" class="input"/>
	            <port name="output1" class="output"/>
        </component>
        
        <component name="fullcyclobwdemodulator1" class="fullcyclobwdemodulator">
	            <parameter name="debug" value="false"/>
	            <parameter name="numunits" value="8"/>
	            <port name="input1" class="input"/>
	            <port name="output1" class="output"/>
        </component>

        <component name="udptx1" class="udpsockettx">
            <parameter name="address" value="127.0.0.1"/>
            <parameter name="port" value="1235"/>
            <port name="input1" class="input"/>
        </component>
        
    </engine>
	
	<link source="udprx1.output1" sink="fullcyclobwmodulator1.input1" />
	<link source="fullcyclobwmodulator1.output1" sink="fullcyclobwdemodulator1.input1" />
	<link source="fullcyclobwdemodulator1.output1" sink="udptx1.input1" />
	
</softwareradio>

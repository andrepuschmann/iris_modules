<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="RoundRobinMasterOFDM">

	<engine name="stackengine1" class="stackengine">

		<component name="rrmacmaster1" class="roundrobinmacmaster">
			<parameter name="payloadlength" value="512"/>
			<parameter name="timer" value="500"/>
			<parameter name="sourceaddress" value="00f0f0f0f0f0"/>
			<parameter name="targetaddress0" value="f009e090e90e"/>
			<parameter name="targetaddress1" value="88888811cccc"/>
			<parameter name="targetaddress2" value="333333555555"/>
			<parameter name="correlationlevel" value="0.8"/>
			<parameter name="ignorecrc" value="true"/>
			<parameter name="decodeowntransmission" value="false"/>
			<parameter name="numclients" value="2"/>
			<parameter name="delaybetweentx" value="0"/>
			<parameter name="simpleframing" value="true"/>
			<port name="topport1" class="io"/>
			<port name="bottominputport" class="io"/>
			<port name="bottomoutputport" class="io"/>
    	</component>

	</engine>
	
	<engine name="pnengine1" class="pnengine">
		
		<component name="masterindemod" class="simpleofdmdemod">
			<port name="input1" class="input"/>
			<port name="output1" class="output"/>
		</component>

    <component name="masterusrprx" class="usrprx">
      <parameter name="debug" value="false"/>
      <parameter name="firmware" value="usrp_firmware.ihx"/>
      <parameter name="fpga" value="usrp_fpga.rbf"/>
      <parameter name="decim" value="128"/>
      <parameter name="centre_freq" value="2410000000"/>
      <parameter name="automatic_side_selection" value="true"/>
      <parameter name="automatic_board_selection" value="true"/>
      <parameter name="usrp_gain" value="40"/>
      <parameter name="scaling_factor" value="1"/>
      <parameter name="numOutputSamples" value="16384"/>
      <parameter name="antenna" value="TXRX"/>
      <port name="output1" class="output"/>
    </component>
	
	</engine>
	
	<engine name="pnengine2" class="pnengine">
		
		<component name="masteroutmod" class="simpleofdmmod">
			<parameter name="numfftbins" value="512"/>
			<port name="input1" class="input"/>
			<port name="output1" class="output"/>
		</component>
		
		<component name="masteroutscaler" class="signalscaler">
			<parameter name="maximum" value="4000"/>
			<port name="input1" class="input"/>
			<port name="output1" class="output"/>
		</component>
		
		<component name="masterusrptx" class="usrptx">
			<parameter name="debug" value="false"/>
			<parameter name="firmware" value="usrp_firmware.ihx"/>
			<parameter name="fpga" value="usrp_fpga.rbf"/>
			<parameter name="interp" value="128"/>
			<parameter name="gain" value="1"/>
			<parameter name="centre_freq" value="2410000000"/>
			<parameter name="automatic_side_selection" value="true"/>
			<parameter name="autotxrx" value="true"/>
			<parameter name="packetmode" value="true"/>
			<port name="input1" class="input"/>
		</component>
		
	</engine>

	<link source="rrmacmaster1.bottomoutputport" sink="masteroutmod.input1" />
	<link source="masteroutmod.output1" sink="masteroutscaler.input1" />
	<link source="masteroutscaler.output1" sink="masterusrptx.input1" />
	<link source="masterusrprx.output1" sink="masterindemod.input1" />
	<link source="masterindemod.output1" sink="rrmacmaster1.bottominputport" />
</softwareradio>

<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="TimingTestRadio">

	<engine name="stackengine1" class="stackengine">

		<component name="timingtest1" class="timingtest">
			<port name="topport1" class="io"/>
			<port name="bottomport1" class="io"/>
    	</component>
	</engine>
	
	<engine name="pnengine1" class="pnengine">
		
		<component name="simpleofdmdemod1" class="simpleofdmdemod">
			<port name="input1" class="input"/>
			<port name="output1" class="output"/>
		</component>
		
		<component name="usrpuhdrx1" class="usrpuhdrx">
			<parameter name="args" value="addr=192.168.10.2"/>
			<parameter name="rate" value="800000"/>
			<parameter name="frequency" value="5000030000"/>
			<parameter name="gain" value="40"/>
			<parameter name="outputblocksize" value="4096"/>
			<port name="output1" class="output"/>
    	</component>
		
	</engine>

	<link source="usrpuhdrx1.output1" sink="simpleofdmdemod1.input1" />
	<link source="simpleofdmdemod1.output1" sink="timingtest1.bottomport1" />
</softwareradio>

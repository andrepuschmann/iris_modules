<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="Radio1">

	<engine name="pnengine1" class="pnengine">

		<component name="filerawreader1" class="filerawreader">
			<parameter name="filename" value="testdata.bin"/>
			<parameter name="blocksize" value="477"/>
			<parameter name="datatype" value="uint8_t"/>
			<port name="output1" class="output"/>
		</component>

		<component name="shapedofdmmod1" class="shapedccsofdmmod">
			<parameter name="numcancellationcarriers" value="4"/>
			<parameter name="shapingExtLen" value="16"/>
			<parameter name="ccsoptimizationfactor" value="0.01"/>
			<parameter name="ifuseccsforpreamble" value="true"/>
			<parameter name="debug" value="true"/>
			<parameter name="activebands" value="-100 -35 35 100"/>
			<parameter name="numfftbins" value="512"/>
			<port name="input1" class="input"/>
			<port name="output1" class="output"/>
		</component>
	
		<component name="signalscaler1" class="signalscaler">
		    <parameter name="maximum" value="0.9"/>
		    <port name="input1" class="input"/>
			<port name="output1" class="output"/>
		</component>
		
		<component name="usrpuhdtx1" class="usrpuhdtx">
			<parameter name="args" value=""/>
			<parameter name="rate" value="4000000"/>
			<parameter name="frequency" value="5003000000"/>
			<parameter name="fixlooffset" value="5000000"/>
			<parameter name="gain" value="0"/>
			<parameter name="streaming" value="true"/>
			<port name="input1" class="input"/>
		</component>

	</engine>

	<link source="filerawreader1.output1" sink="shapedofdmmod1.input1" />
	<link source="shapedofdmmod1.output1" sink="signalscaler1.input1" /> 
	<link source="signalscaler1.output1" sink="usrpuhdtx1.input1" />

</softwareradio>

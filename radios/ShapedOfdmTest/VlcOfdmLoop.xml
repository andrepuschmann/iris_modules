<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="Radio1">

    <engine name="pnengine1" class="pnengine">
    
        <component name="udprx1" class="udpsocketrx">
            <parameter name="port" value="1234"/>
            <parameter name="buffersize" value="1316"/>
            <parameter name="outputtype" value="uint8_t"/>
            <port name="output1" class="output"/>
        </component>

      <component name="shapedofdmmod1" class="shapedofdmmod">
        <parameter name="debug" value="false"/>
        <parameter name="numfftbins" value="256"/>
        <parameter name="shapingExtLen" value="30"/>
        <parameter name="bitsPerDataSymbol" value="2"/>
        <port name="input1" class="input"/>
        <port name="output1" class="output"/>
      </component>

     <component name="channel1" class="channel">
        <parameter name="debug" value="false"/>
        <parameter name="freqoffset" value="0.05"/>
        <parameter name="snr" value="20"/>
        <port name="input1" class="input"/>
        <port name="output1" class="output"/>
      </component>

      <component name="shapedofdmdemod1" class="shapedofdmdemod">
        <parameter name="debug" value="false"/>
        <parameter name="shapingExtLen" value="30"/>
        <parameter name="bitsPerDataSymbol" value="2"/>
        <port name="input1" class="input"/>
        <port name="output1" class="output"/>
      </component>

        <component name="udptx1" class="udpsockettx">
            <parameter name="address" value="127.0.0.1"/>
            <parameter name="port" value="2222"/>
            <port name="input1" class="input"/>
        </component>
        
    </engine>
	
	
  <link source="udprx1.output1" sink="shapedofdmmod1.input1" />
  <link source="shapedofdmmod1.output1" sink="channel1.input1" />
  <link source="channel1.output1" sink="shapedofdmdemod1.input1" />
  <link source="shapedofdmdemod1.output1" sink="udptx1.input1" />
	
</softwareradio>
